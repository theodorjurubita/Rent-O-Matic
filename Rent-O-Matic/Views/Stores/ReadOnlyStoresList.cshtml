@using Rent_O_Matic.Models
@model IEnumerable<Store>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Available store locations</h2>
<br />
<br />
<table id="stores" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>City</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#stores").DataTable({
                ajax: {
                    url: "/api/stores",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "city"

                    },
                    {
                        data: "country"
                    }
                ]
            });
        });
    </script>
}
